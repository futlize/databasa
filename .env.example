# Service/container identity
DATABASA_CONTAINER_NAME=databasa

# Network control
# Use 127.0.0.1 to keep local-only access.
# Use 0.0.0.0 to expose externally (combine with firewall rules).
DATABASA_BIND_IP=127.0.0.1
DATABASA_PORT=50051

# Persistent data path on host
DATABASA_DATA_DIR=./data

# Resource limits
DATABASA_CPU_LIMIT=1.0
DATABASA_MEMORY_LIMIT=2g
DATABASA_PIDS_LIMIT=256
DATABASA_NOFILE_SOFT=65536
DATABASA_NOFILE_HARD=65536

# Log disk usage cap
DATABASA_LOG_MAX_SIZE=10m
DATABASA_LOG_MAX_FILE=3
